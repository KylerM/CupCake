<controls:MetroWindow x:Class="CupCake.Client.Windows.MessageBoxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    TitleCaps="False"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    Icon="/Resources/CupCake.ico"
    ShowIconOnTitleBar="False"
    NonActiveGlowBrush="#3E3E40"
    GlowBrush="{DynamicResource BackgroundSelected}" 
    WindowStartupLocation="CenterOwner"
    SnapsToDevicePixels="True"
    MinWidth="150"
	Background="{StaticResource LightBackground}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Name="BodyTextBlock" FontSize="16" Foreground="{StaticResource Foreground}" MaxWidth="400" TextWrapping="Wrap" />
        <Button Content="OK" Grid.Row="2" Grid.Column="0" Click="Button_Click" />
    </Grid>
</controls:MetroWindow>
