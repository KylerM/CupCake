<controls:MetroWindow x:Class="CupCake.Client.Windows.MessageBoxWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      Style="{StaticResource CupCakeWindow}"
                      ResizeMode="NoResize"
                      SizeToContent="WidthAndHeight"
                      WindowStartupLocation="CenterOwner"
                      MinWidth="150">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="12" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <TextBlock Name="BodyTextBlock" FontSize="16" Foreground="{StaticResource Foreground}" MaxWidth="400"
                   TextWrapping="Wrap" />
        <Button Content="OK" Grid.Row="2" Grid.Column="0" Click="Button_Click" />
    </Grid>
</controls:MetroWindow>